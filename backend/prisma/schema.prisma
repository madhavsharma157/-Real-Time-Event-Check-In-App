generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(cuid())
  name     String
  email    String   @unique
  password String
  avatar   String?
  events   Event[]  @relation("UserEvents")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Event {
  id        String   @id @default(cuid())
  name      String
  description String?
  location  String
  startTime DateTime
  endTime   DateTime?
  imageUrl  String?
  attendees User[]   @relation("UserEvents")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
